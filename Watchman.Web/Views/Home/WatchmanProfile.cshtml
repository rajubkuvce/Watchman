@model Watchman.Web.Models.WatchmanInfo

@{
    ViewData["Title"] = "WatchmanProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>WatchmanProfile</h1>

<div>
    <h4>WatchmanProfile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>
    <div>
        @if (Model.WatchmanPatients != null && Model.WatchmanPatients.Any())
        {
            @foreach (var pair in Model.WatchmanPatients)
            {
                <h4>@pair.PatientId</h4>
                <form asp-action="PatientProfile" asp-controller="Home">
                    <button name="patientId" value="@pair.PatientId">Look at</button>
                </form>
                
            }
        }
        else
        {
            <p>Sorry, but you don't have patients to monitor</p>
        }

    </div>

    <form asp-controller="Home" asp-action="SendRequestToPatient" method="post">
        <label>Input patient email</label>
        <input type="email" name="patientEmail" placeholder="Email" />
        <button type="submit">Send request</button>
    </form>
</div>
