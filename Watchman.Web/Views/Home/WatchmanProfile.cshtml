@model Watchman.Web.ViewModels.WatchmanViewModel

@{
    ViewData["Title"] = "WatchmanProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>WatchmanProfile</h1>

<div>
    <h4>WatchmanProfile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-6">
            Watchman id
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.WatchmanId)
        </dd>
    </dl>
    <div class="row">
        <form asp-controller="Home" asp-action="SendRequestToPatient" method="post">
            <label>Input patient email</label>
            <input type="email" name="patientEmail" placeholder="Email" />
            <button type="submit">Send request</button>
        </form>
    </div>
    <hr/>
    <div class="container">
        @if (Model.PatientsAndPersonalInfoPairs?.Any() ?? false)
        {
            <div class="row thead-light">
                <div class="col-6">Patient name</div>
                <div class="col-3">Activity state</div>
                <div class="col-3"></div>
            </div>
            @foreach (var patient in Model.PatientsAndPersonalInfoPairs)
            {
                <div class="row">
                    <div class="col-6">@patient.PersonalInformation.FirstName @patient.PersonalInformation.SecondName</div>
                    <div class="col-3">@patient.Patient.CurrentActivityState.GetType().Name</div>
                    <div class="col-3">
                        <form asp-action="PatientProfileForWatchman" asp-controller="Home" method="get">
                            <button name="patientId" value="@patient.Patient.Id">Details</button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <p>You don't have patients to monitor</p>
        }
    </div>
</div>
